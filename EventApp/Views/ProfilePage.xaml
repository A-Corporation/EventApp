                                    <material:MaterialLabel Text="{Binding User.FullName}"
                                                            VerticalOptions="Center"
                                                            HorizontalOptions="FillAndExpand"
                                                            FontSize="20"
                                                            TextColor="Black"
                                                            HorizontalTextAlignment="Start"
                                                            FontAttributes="Bold"
                                                            FontFamily="zurich-light-condensed-bt" />

                                    <material:MaterialLabel Text="{Binding User.DetailInfo}"
                                                            VerticalOptions="Center"
                                                            HorizontalOptions="FillAndExpand"
                                                            FontSize="16"
                                                            TextColor="Black"
                                                            HorizontalTextAlignment="Start"
                                                            FontFamily="zurich-light-condensed-bt" />
                                </StackLayout>

                            </StackLayout>
                            -->
                            <!-- Контакты -->

                            <StackLayout Spacing="10">
                                <StackLayout Orientation="Horizontal"
                                             Spacing="20">
                                    <Image Source="Phone" />
                                    <material:MaterialLabel Text="+7(916)532-78-90"
                                                            FontSize="16"
                                                            TextColor="Black"
                                                            FontFamily="zurich-light-condensed-bt" />
                                </StackLayout>

                                <StackLayout Orientation="Horizontal"
                                             Spacing="20">
                                    <Image Source="Mail" />
                                    <material:MaterialLabel Text="igormann@gmail.ru"
                                                            FontSize="16"
                                                            TextColor="Black"
                                                            FontFamily="zurich-light-condensed-bt" />
                                </StackLayout>
                            </StackLayout>



                            <BoxView BackgroundColor="White"
                                     HeightRequest="50" />



                        </StackLayout>

                    </pancakeview:PancakeView>
                    <BoxView BackgroundColor="White"
                             Grid.Row="2"
                             Margin="0,-30,0,-500" />
                </Grid>

            </controls:ParallaxControl>
        </Grid>

